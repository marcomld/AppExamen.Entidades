@model IEnumerable<AppExamen.Entidades.Computadora>

@{
    ViewData["Title"] = "Index";
}

<h1>Computadoras</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Procesador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemoriaRAMGB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlmacenamientoGB)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Procesador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MemoriaRAMGB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AlmacenamientoGB)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary">Edit</a> |
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info">Details</a> |
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
